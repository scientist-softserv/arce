#!/bin/bash

if [ -z "$1" ] || [ -z "$2" ]
then
    echo './bin/helm_deploy RELEASE_NAME NAMESPACE'
    exit 1
fi
release_name="${1}"
namespace="${2}"

helm upgrade \
    --install \
    --atomic \
    --timeout 15m0s \
    --namespace="$namespace" \
    --create-namespace \
    "$release_name" \
    chart
