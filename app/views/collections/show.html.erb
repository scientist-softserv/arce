<!-- Header -->
<%= render partial: '/shared/sub_header' %>
<!-- Title -->
<div class="container">
  <div class="u-heading-v2-5--bottom g-brd-primary g-mb-40 col-md-12">
    <h1 class="u-heading-v2__title text-uppercase g-font-weight-300 mb-0 g-mt-40">
      <%= @collection.title.html_safe %>
    </h1>
  </div>

  <!-- Content -->
  <div class="card-body col-md-12">
    <div>        
      <%= link_to "View Items in Collection", root_path(f:{collection_facet: [@collection.title]}) %>
    </div>
    <div class="g-mb-60">
      <%= @collection.content.html_safe %>
    </div>
  </div>
  <!-- End Content -->
  <!-- picture section to be added later -->
  <!-- picture section to be added later -->
  <!-- Video box -->

  <div class="col-md-12 g-mb-60">
    <div class="embed-responsive embed-responsive-16by9">
      <iframe width="100%" src="<%= @collection.video_embed_link %>" frameborder="0" allowfullscreen=""></iframe>
    </div>
  </div>
  
  <!-- End Youtube Example -->
  <!-- arts and cultrure embed -->
  <div class="col-md-12 g-mb-60">
    <%= @collection.arts_and_culture_embed.html_safe %>
    
  </div>
  <!-- arts and cultrure embed -->
  <!--buttons-->
  <div class="col-md-12">
    <% if current_user && !current_user.guest? %>
      <%= link_to 'Edit', edit_collection_path(@collection) %> |
      <%= link_to 'Delete Collection', @collection, method: :delete, data: { confirm: 'Are you sure?' } %> |
    <% end %>
    <%= link_to 'Back', root_path %>
  </div>
</div>

