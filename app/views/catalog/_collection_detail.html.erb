<div class="col-lg-4 col-sm-6 g-mb-30">
  <article class="u-block-hover">
    <%= link_to collection_path(collection) do %>
      <figure class="u-bg-overlay g-bg-black-opacity-0_3--after">
        <%= image_tag(collection.image_url(:thumb).to_s, :alt => collection.title, :class => "img-fluid w-100 u-block-hover__main--zoom-v1") if collection.image.present? %>
      </figure>
    <% end %>
    <header class="g-pos-abs g-right-20 g-bottom-10 g-left-20">
      <%= link_to collection_path(collection), :class => "h2 g-font-weight-600 g-color-white" do %>
        <%= collection.title %>
      <% end %>
    </header>
  </article>
</div>